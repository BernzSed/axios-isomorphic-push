{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "mocha": true,
    "node": true
  },
  "globals": {
    "expect": true
  },
  "rules": {
    "padded-blocks": 0,
    "no-use-before-define": [2, "nofunc"],
    "no-unused-expressions": 0,
    "no-else-return": 0,
    "no-unused-vars": 1,
    "comma-dangle": ["error", "never"],
    "prefer-arrow-callback": ["error", { "allowNamedFunctions": true }]
  }
}
